<Page x:Class="Advocacy_Software.Pages.PageGenerateHipossuficiencyContract"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Advocacy_Software.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="PageGenerateHipossuficiencyContract" Background="Lavender" x:Name="PageAttorneyHipossuficiencyContract" Loaded="PageAttorneyHipossuficiencyContract_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="46"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Border Background="Black" BorderBrush="Black" BorderThickness="1">
            <Label Foreground="Lavender"  Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontWeight="Bold">Contrato de hipossuficiência</Label>
        </Border>
        <Label Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" Margin="10,0,0,0">Digite o CPF ou CNPJ do cliente:</Label>
        <TextBox x:Name="TextBoxCpfOrCnpj" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="25" Width="390" Margin="10,48,400,0"/>


        <Button Grid.Row="1" x:Name="ButtonGenerateHipossuficiencyContract" Content="Gerar contrato" FontSize="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="390" Background="DarkGray" Margin="11,199,0,0" Click="ButtonGenerateHipossuficiencyContract_Click"/>
        <Label Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" Margin="11,92,0,0" Content="Cidade do seu escritório:"/>
        <TextBox x:Name="TextBoxCity" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="25" Width="390" Margin="10,140,0,0"/>
    </Grid>
</Page>
