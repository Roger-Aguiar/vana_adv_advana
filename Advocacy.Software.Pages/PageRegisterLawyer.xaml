<Page x:Name="PageRegisterLawyers" x:Class="Advocacy_Software.Pages.PageRegisterLawyer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Advocacy_Software.Pages"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="PageRegisterLawyer" Background="Lavender" Loaded="PageRegisterLawyers_Loaded">

    <Grid Height="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="46"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border Background="Black" BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top">
            <Label Foreground="Lavender"  Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontWeight="Bold">Cadastro de advogados</Label>
        </Border>
        <Label Content="Nome: " FontSize="15" Margin="12,11,613,54" Height="30" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxName" TabIndex="0" Height="25" FontSize="15" Margin="223,11,378,0" Grid.Row="1" VerticalAlignment="Top" />
        <Label Content="Profissão: " FontSize="15" Margin="12,38,624,0" Height="28" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxProfession" TextWrapping="Wrap" Height="25" FontSize="15" Margin="223,41,378,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="Número da OAB: " FontSize="15" Margin="12,68,582,0" Height="30" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxOabNumber" TextWrapping="Wrap" Height="25" FontSize="15" Margin="223,71,378,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="UF da OAB: " FontSize="15" Margin="12,99,582,0" Height="30" Grid.Row="1" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxUfOab" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="223,102,0,0" Height="25" FontSize="15" Width="199" ></ComboBox>
        <Label Content="UF: " FontSize="15" Margin="12,129,582,0" Height="30" Grid.Row="1" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxUf" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="223,132,0,0" FontSize="15" Height="25" Width="199" SelectionChanged="ComboBoxUf_SelectionChanged"/>
        <Label Content="Cidade: " FontSize="15" Margin="10,160,708,0" Height="30" Grid.Row="1" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxCities" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="223,162,0,0" FontSize="15" Height="25" Width="199" />
        <Label Content="Data de cadastro: " FontSize="15" Margin="10,190,584,0" Height="30" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxRegisterDate" IsReadOnly="True" TextWrapping="Wrap" Height="26" FontSize="15" Margin="223,192,378,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="Última atualização: " FontSize="15" Margin="10,219,584,0" Height="30" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxLastUpdate" IsReadOnly="True" TextWrapping="Wrap" Height="26" FontSize="15" Margin="223,223,378,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="Número de registro: " FontSize="15" Margin="12,249,582,0" Height="30" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxGuidId" IsReadOnly="True" TextWrapping="Wrap" Height="26" FontSize="15" Margin="223,254,378,0" Grid.Row="1" VerticalAlignment="Top"/>

        <Border Grid.Row="1" Background="DarkGray"   Margin="543,4,10,579" HorizontalAlignment="Right" />

        <Button x:Name="ButtonNew" Height="30" Content="Novo" Grid.Row="1" VerticalAlignment="Bottom"  Width="200" FontSize="20" Margin="427,0,173,713" Background="Gray"  Click="ButtonNew_Click" HorizontalAlignment="Right"/>
        <Button x:Name="ButtonSave" Height="30" Content="Salvar" Grid.Row="1" VerticalAlignment="Top"   Width="200" FontSize="20" Background="Gray" Click="ButtonSave_Click" Margin="427,47,173,0" HorizontalAlignment="Right"/>
        <Button x:Name="ButtonDelete" Height="30" Content="Deletar" Grid.Row="1" VerticalAlignment="Bottom" Margin="427,0,173,640" Width="200" FontSize="20" Background="Gray" Click="ButtonDelete_Click" HorizontalAlignment="Right"/>
        <Label x:Name="LabelNumberOfLawyers" Content="" FontSize="15" FontWeight="Bold" Margin="790,621,0,123" Height="30" Grid.Row="1" RenderTransformOrigin="0.65,0.46" />
    </Grid>
</Page>
