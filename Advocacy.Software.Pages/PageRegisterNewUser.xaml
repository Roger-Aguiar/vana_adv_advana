<Page x:Class="Advocacy_Software.Pages.PageRegisterNewUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Advocacy_Software.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="PageRegisterNewUser" Background="Lavender">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="46"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Background="Black" BorderBrush="Black" BorderThickness="1">
            <Label Foreground="Lavender"  Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontWeight="Bold">Meus usuários</Label>
        </Border>

        <Border Grid.Row="2" Background="DarkGray"></Border>

        <ListBoxItem Grid.Row="2" x:Name="ListBoxAdd" Background ="Lavender"  Foreground="Black"  Width="200"  Content="Novo" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Center" FontSize="20"></ListBoxItem>
        <ListBoxItem Grid.Row="2" x:Name="ListBoxSave" Background ="Lavender"  Foreground="Black"  Width="200"  Content="Salvar" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontSize="20"></ListBoxItem>
        <ListBoxItem Grid.Row="2" x:Name="ListBoxDelete" Background ="Lavender"  Foreground="Black"  Width="200"  Content="Deletar" VerticalAlignment="Center" HorizontalAlignment="Right" HorizontalContentAlignment="Center" FontSize="20"></ListBoxItem>

        <Label Content="Nome completo:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="10,15,0,0" Grid.Row="1" />
        <TextBox x:Name="TextBoxFullName" FontSize="20" VerticalAlignment="Top" TextWrapping="Wrap" Margin="217,19,0,0" HorizontalAlignment="Left" Width="500" Grid.Row="1"/>
        <TextBox x:Name="TextBoxUserName" FontSize="20" VerticalAlignment="Top" TextWrapping="Wrap" Margin="217,61,63,0" Grid.Row="1"/>
        <Label Content="Usuário:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="10,57,0,0" Grid.Row="1" />
        <TextBox x:Name="TextBoxEmail" FontSize="20" VerticalAlignment="Top" TextWrapping="Wrap" Margin="217,103,63,0" Grid.Row="1"/>
        <Label Content="Email:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="10,99,0,0" Grid.Row="1" />
        <Label Content="Senha:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="10,139,0,0" Grid.Row="1" />
        <TextBox x:Name="TextBoxPassword" FontSize="20" VerticalAlignment="Top" TextWrapping="Wrap" Margin="217,143,63,0" Grid.Row="1"/>
        <ComboBox x:Name="ComboBoxGenre" VerticalAlignment="Top" FontSize="20" Height="29" Margin="217,185,63,0" Grid.Row="1" />
        <Label Content="Gênero:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="10,181,0,0" Grid.Row="1" />
        <TextBox x:Name="TextBoxGenre" FontSize="20" VerticalAlignment="Top" TextWrapping="Wrap" Margin="217,185,82,0" Grid.Row="1"/>
        <Label Content="Data de cadastro:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="11,223,0,0" Grid.Row="1" />
        <TextBox x:Name="TextBoxRegisterDate" FontSize="20" VerticalAlignment="Top" IsReadOnly="True" TextWrapping="Wrap" Margin="217,227,63,0" Grid.Row="1"/>
        <Label Content="Número da matrícula:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="11,265,0,0" Grid.Row="1" />
        <TextBox x:Name="TextBoxGuidSignature" FontSize="20" VerticalAlignment="Top" IsReadOnly="True" TextWrapping="Wrap" Margin="217,269,63,0" Grid.Row="1"/>
        <ComboBox x:Name="ComboBoxGenre_Copy" VerticalAlignment="Top" FontSize="20" Height="29" Margin="11,374,63,0" Grid.Row="1" />
        <Label Content="Selecione um usuário da lista para exibir os dados no formulário:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="11,332,0,0" Grid.Row="1" />


    </Grid>
</Page>
