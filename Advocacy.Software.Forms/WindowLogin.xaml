<Window x:Name="WindowLogin1" x:Class="Advocacy_Software.Forms.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Advocacy_Software.Forms"
        mc:Ignorable="d"
        Title="Acesso ao sistema" Height="371" Width="390" ResizeMode="CanMinimize" Icon="/Advocacy.Software.Forms/user.png" WindowStartupLocation="CenterScreen" Loaded="WindowLogin1_Loaded">
    <Grid Margin="15">
        <Label Content="Bem vindo" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="25"/>
        <Label Content="Email cadastrado" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="0,48,0,0"/>
        <TextBox x:Name="TextBoxUserName" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" TextWrapping="Wrap" Width="340" Margin="0,85,0,0"/>
        <Label Content="Senha" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="0,114,0,0"/>
        <PasswordBox x:Name="UserPassword" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Width="340" Margin="0,151,0,0"/>
        <Button x:Name="ButtonAccess" Content="Entrar" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,202,0,0" Width="340" Click="ButtonAccess_Click"/>
        <Label HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="12" Margin="0,237,0,0">
            <Hyperlink Click="Hyperlink_Click">Esqueci minha senha</Hyperlink>
        </Label>

        <Label HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="12" Margin="0,246,0,0">
            <Hyperlink Click="HyperlinkNewUser_Click">Novo usuário</Hyperlink>
        </Label>
    </Grid>
</Window>
