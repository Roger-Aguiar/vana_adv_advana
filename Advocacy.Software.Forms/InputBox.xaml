<Window x:Class="Advocacy_Software.Advocacy.Software.Forms.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recuperação de Senha" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Digite seu e-mail cadastrado:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        <TextBox Name="TextEmail" Width="300" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Name="ButtonOk" Content="OK" Width="80" Click="BtnOk_Click"/>
            <Button Name="ButtonCancel" Content="Cancelar" Width="80" Margin="10,0,0,0" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
